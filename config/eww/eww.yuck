(deflisten cycle-6 'while true; do echo 0; sleep 6; echo 1; sleep 6; done')
(deflisten cycle-5 'while true; do echo 0; sleep 5; echo 1; sleep 5; done')
(defvar browser "firefox-developer-edition")
(defvar terminal "kitty")

