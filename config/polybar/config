main        = #4ca9f5
sec         = #7abef5
sub         = #b0d0eb
warn        = #f54088
positive    = #e67979
trans       = #00ff0000

; ╔╗ ┌─┐┬─┐
; ╠╩╗├─┤├┬┘
; ╚═╝┴ ┴┴└─
[bar/base]
height = 48
width = 100%

offset-y = 0
offset-x = 0
enable-ipc = true
padding = 0
module-margin = 0

background = ${colors.background}
foreground = ${colors.foreground}
border-bottom-size = 0
