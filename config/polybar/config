; ╔═╗┬ ┬┌─┐┌┬┐┌─┐┌┬┐
; ║  │ │└─┐ │ │ ││││
; ╚═╝└─┘└─┘ ┴ └─┘┴ ┴
[module/launcher]
type=custom/text
content = %{O2}
content-margin = 3
content-foreground = ${colors.sec}
content-background = ${colors.background}
content-font = 8
click-left= rofi -no-lazy-grab -show drun -theme ~/.config/rofi/launcher.rasi

[module/power]
type=custom/text
content = 拉%{O2}
content-margin = 3
content-foreground = ${colors.sec}
content-background = ${colors.background}
content-font = 8
click-left = ~/dotfiles/scripts/powermenu.sh

[module/terminal]
type=custom/text
content = %{O1}╼╾
content-margin = 1
content-font = 6
content-foreground = ${colors.sub}
content-background = ${colors.background}
click-left = bspc rule -a Alacritty -o state=floating rectangle=1118x1960+1361+100 && alacritty

[module/layout]
type=custom/text
content = ╼╾
content-margin = 1
content-font = 6
content-foreground = ${colors.sub}
content-background = ${colors.background}
click-left = ~/dotfiles/scripts/layouts.sh

[module/dunst]
type = custom/ipc
initial = 1
format-foreground = ${colors.sub}
format-margin = 1
format-font = 5

hook-0 = echo "%{A1:polybar-msg hook dunst 2 && killall -SIGUSR1 dunst:}%{O-2}  %{A}" &
hook-1 = echo "%{A1:killall -SIGUSR2 dunst && notify-send -t 3000 Resumed Dunst &&  polybar-msg hook dunst 1:}%{F#1e2132}%{O-2}  %{A}" &

[module/spacer]
type = custom/text
content = "    "
content-margin = 7

; ╔╗ ┌─┐┌─┐┬ ┬┌┬┐
; ╠╩╗└─┐├─┘││││││
; ╚═╝└─┘┴  └┴┘┴ ┴
[module/bspwm]
type = internal/bspwm
format = <label-state>
format-margin = 0
format-background = ${colors.background}
enable-click = true
reverse-scroll = false
enable-scroll = true

label-focused = %icon%
label-focused-font = 8
label-focused-foreground = ${colors.emphasis}
label-focused-margin = 3

label-empty = %icon%
label-empty-margin = 3
label-empty-font = 7
label-empty-foreground = ${colors.minor}

label-occupied = %icon%
label-occupied-font = 7
label-occupied-foreground = ${colors.sub}
label-occupied-margin = 3

ws-icon-0 = 1;%{O1}%{A1:bspc desktop -f \^1 :}%{A}
ws-icon-1 = 1;
ws-icon-2 = 2;%{O-1}%{A1:bspc desktop -f \^2 :}%{A}
ws-icon-3 = 3;%{O-2}%{A1:bspc desktop -f \^3 :}%{A}
ws-icon-4 = 4;%{O3}%{A1:bspc desktop -f \^4:}漣%{A}
ws-icon-5 = 5;%{O-6}%{A1:bspc desktop -f \^5 :}ﯟ%{A}
ws-icon-6 = 6;%{O-8}%{A1:bspc desktop -f \^6:}%{A}

; ╔═╗┬ ┬┌┬┐┬┌─┐
; ╠═╣│ │ ││││ │
; ╩ ╩└─┘─┴┘┴└─┘
[module/pulseaudio]
type = internal/pulseaudio

format-volume-margin = 3
format-volume = <ramp-volume><bar-volume>
format-volume-background = ${colors.background}
use-ui-max = false
interval = 10

ramp-volume-font = 8
ramp-volume-0 = " "
ramp-volume-0-foreground= ${colors.minimal}
ramp-volume-1 = " "
ramp-volume-1-foreground= ${colors.minor}
ramp-volume-2 = "奔 "
ramp-volume-2-foreground= ${colors.sub}
ramp-volume-3 = "墳 "
ramp-volume-3-foreground= ${colors.sec}
ramp-volume-4 = " "
ramp-volume-4-foreground= ${colors.main}

label-muted = "%{T0}    %{O2}%{T-}%{T3}━━━━━━━━━━━%{T-}"
format-muted-margin = 3
format-muted-foreground = ${colors.inactive}
format-muted-font = 7
format-muted-background = ${colors.background}

bar-volume-width = 12
bar-volume-foreground-0 = ${colors.minimal}
bar-volume-foreground-1 = ${colors.minimal}
bar-volume-foreground-2 = ${colors.minor}
bar-volume-foreground-3 = ${colors.minor}
bar-volume-foreground-4 = ${colors.sub}
bar-volume-foreground-5 = ${colors.sub}
bar-volume-foreground-6 = ${colors.sec}
bar-volume-foreground-7 = ${colors.sec}
bar-volume-foreground-8 = ${colors.main}
bar-volume-foreground-9 = ${colors.main}
bar-volume-foreground-10 = ${colors.main}
bar-volume-gradient = false
bar-volume-indicator =
bar-volume-indicator-font = 4
bar-volume-fill = ━
bar-volume-fill-font = 4
bar-volume-empty = ━
bar-volume-empty-font = 4
bar-volume-empty-foreground = ${colors.inactive}

click-right = pavucontrol
click-middle = alacritty -e alsamixer

; ╔═╗┌─┐┬ ┬
; ║  ├─┘│ │
; ╚═╝┴  └─┘
[module/cpu]
type = internal/cpu
interval = 0.2
format = %{A1:bspc rule -a Alacritty -o state=floating rectangle=1920x1080+1080+540 && alacritty -e s-tui:}<label> <ramp-coreload>%{A1}
label = "%{F#b0d0eb}%{T5}﬙%{T-}%{F-}  %percentage%% "
format-margin = 1

ramp-coreload-font = 12
ramp-coreload-spacing = 1
ramp-coreload-0 = %{F#3d4364}▁%{F-}
ramp-coreload-1 = %{F#cedeeb}▂%{F-}
ramp-coreload-2 = %{F#b0d0eb}▃%{F-}
ramp-coreload-3 = %{F#7abef5}▄%{F-}
ramp-coreload-4 = %{F#4ca9f5}▅%{F-}
ramp-coreload-5 = %{F#f5b17a}▆%{F-}
ramp-coreload-6 = %{F#f5736c}▇%{F-}
ramp-coreload-7 = %{F#eb4972}█%{F-}

; ╔╦╗┌─┐┌┬┐┌─┐┬─┐┬ ┬
; ║║║├┤ ││││ │├┬┘└┬┘
; ╩ ╩└─┘┴ ┴└─┘┴└─ ┴
[module/memory]
type = internal/memory
interval = 1
format = %{A1:bspc rule -a Alacritty -o state=floating rectangle=1920x1080+1080+540 && alacritty -e htop:}<label> <bar-used>%{A}
label = "%{F#b0d0eb}%{T6}%{T-}%{F-}  %gb_used% "
format-background = ${colors.background}
format-margin = 2

bar-used-indicator =
bar-used-width = 16
bar-used-foreground-0 = ${colors.sub}
bar-used-foreground-1 = ${colors.sec}
bar-used-foreground-2 = ${colors.emphasis}
bar-used-foreground-3 = ${colors.positive}
bar-used-fill = ⏽
bar-used-empty = ⏽
bar-used-empty-foreground = ${colors.minimal}

; ╔╦╗┌─┐┌┬┐┌─┐
;  ║ ├┤ │││├─┘
;  ╩ └─┘┴ ┴┴
[module/temperature]
type = internal/temperature
hwmon-path = /sys/devices/pci0000:00/0000:00:01.1/0000:01:00.0/nvme/nvme0/hwmon0/temp1_input
units = true
format-margin = 2

base-temperature = 25
thermal-zone = 0
warn-temperature = 69

format = %{A1:bspc rule -a Alacritty -o state=floating rectangle=1920x1080+1080+540 && alacritty -e s-tui:}<ramp>  <label>%{A}
format-warn = <ramp> <label-warn>

label = %temperature-c%
label-warn = " %temperature-c%"
label-warn-foreground = ${colors.positive}

ramp-0 = "%{F#5f89f5}%{F-}"
ramp-1 = "%{F#b0d0eb}%{F-}"
ramp-2 = "%{F#eb4972}﨏%{F-}"
ramp-foreground = ${colors.foreground}
ramp-font = 5

; ╔╦╗┌─┐┌┬┐┌─┐
;  ║║├─┤ │ ├┤
; ═╩╝┴ ┴ ┴ └─┘
[module/date]
type = internal/date
interval = 1
format = %{F#7abef5}%{T7}%{O14}%{T-}%{F-}<label>

date = "%{T2}%A, %B %d%{T-}"
time = "%{T3}%H:%M%{T-}"

; date-alt = "%m-%d-%y"
; time-alt = "%H:%M:%S"

label-background = ${colors.background}
label-foreground = ${colors.foreground}
label = %date%   %{F#7abef5}%{T13}%{O6}%{T-}%{F-} %time%
