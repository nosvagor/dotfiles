bottom = false

font-0 = "Open Sans:pixelsize=16;3"
font-1 = "Open Sans:pixelsize=18;4"
font-2 = "Open Sans:weight=bold:pixelsize=18;4"

font-3 = "Hack Nerd Font:pixelsize=16;3.5"
font-4 = "Hack Nerd Font:pixelsize=17;3.5"
